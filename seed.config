# Target
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_mt7981=y
CONFIG_TARGET_mediatek_mt7981_DEVICE_filogic=y

# Enable multiple image formats
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_IMAGES_LZMA=y
CONFIG_TARGET_IMAGES_TARGZ=y
CONFIG_TARGET_IMAGES_EXT4=y
CONFIG_TARGET_IMAGES_SQUASHFS=y
CONFIG_TARGET_IMAGES_UIMAGE=y

# Base system
CONFIG_PACKAGE_kmod-mtd-rw=y       # 救砖必备
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_block-mount=y

# Network
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_ip6tables=y

# LuCI
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-app-mentohust=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-argon-config=y

# Utilities
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_vim=y
CONFIG_PACKAGE_screen=y

# Optional
CONFIG_PACKAGE_autosamba=y
CONFIG_PACKAGE_dhcp-server=y
